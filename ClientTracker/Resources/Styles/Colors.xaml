<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#2563EB</Color>
    <Color x:Key="PrimaryDark">#1E40AF</Color>
    <Color x:Key="PrimaryDarkText">#0F172A</Color>
    <Color x:Key="Secondary">#14B8A6</Color>
    <Color x:Key="SecondaryDarkText">#0F766E</Color>
    <Color x:Key="Tertiary">#F59E0B</Color>
    <Color x:Key="Danger">#DC2626</Color>
    <Color x:Key="DangerDark">#B91C1C</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#0F172A</Color>
    <Color x:Key="MidnightBlue">#0F172A</Color>
    <Color x:Key="OffBlack">#0B1120</Color>

    <Color x:Key="Gray100">#F8FAFC</Color>
    <Color x:Key="Gray200">#E2E8F0</Color>
    <Color x:Key="Gray300">#CBD5E1</Color>
    <Color x:Key="Gray400">#94A3B8</Color>
    <Color x:Key="Gray500">#64748B</Color>
    <Color x:Key="Gray600">#475569</Color>
    <Color x:Key="Gray900">#0F172A</Color>
    <Color x:Key="Gray950">#020617</Color>

    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceAlt">#F1F5F9</Color>
    <Color x:Key="SurfaceElevated">#FFFFFF</Color>
    <Color x:Key="BorderSubtle">#E2E8F0</Color>
    <Color x:Key="TextPrimary">#0F172A</Color>
    <Color x:Key="TextMuted">#64748B</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- Light background closer to modern admin dashboards -->
    <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F7F8FB" Offset="0.0" />
        <GradientStop Color="#F3F4FF" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AppBackgroundDarkBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0B1120" Offset="0.0" />
        <GradientStop Color="#111827" Offset="1.0" />
    </LinearGradientBrush>
</ResourceDictionary>
