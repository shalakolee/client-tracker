<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ClientTracker.Pages.ContactsPage"
    x:Name="ContactsPageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ClientTracker.Controls"
    xmlns:services="clr-namespace:ClientTracker.Services"
    Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Contacts]}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <services:InitialsConverter x:Key="InitialsConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Background>
        <AppThemeBinding Light="{StaticResource AppBackgroundBrush}" Dark="{StaticResource AppBackgroundDarkBrush}" />
    </ContentPage.Background>

    <ContentPage.Behaviors>
        <controls:SwipeBackBehavior />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto,*">
        <controls:TopBar NavigationMode="Back"
            Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Contacts]}"
            Subtitle="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Contacts_Subtitle]}"
            IsSearchVisible="True"
            IsSearchExpandable="True"
            SearchPlaceholder="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Contacts_SearchPlaceholder]}"
            SearchText="{Binding SearchText}"
            SearchCommand="{Binding LoadCommand}" />

        <RefreshView Grid.Row="1" Command="{Binding LoadCommand}" IsRefreshing="{Binding IsBusy}">
            <Grid RowDefinitions="Auto,Auto,*" Padding="{StaticResource PagePadding}" RowSpacing="16">
                <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Contacts]}" Style="{StaticResource SectionTitle}" />

                <Border Grid.Row="1" BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}" StrokeThickness="0" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Picker
                            Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Contacts_Filter_Client]}"
                            ItemsSource="{Binding ClientFilters}"
                            SelectedItem="{Binding SelectedClientFilter}">
                            <Picker.ItemDisplayBinding>
                                <Binding Path="DisplayName" />
                            </Picker.ItemDisplayBinding>
                        </Picker>
                        <HorizontalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">
                            <CheckBox IsChecked="{Binding NotesOnly}" />
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Contacts_Filter_Notes]}" VerticalTextAlignment="Center" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <Border Grid.Row="2" BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20" />
                    </Border.StrokeShape>
                    <CollectionView ItemsSource="{Binding Contacts}" SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid RowDefinitions="Auto,1">
                                    <Grid Padding="16,12" ColumnDefinitions="Auto,*,Auto,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="4" MinimumHeightRequest="72">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding BindingContext.ViewContactCommand, Source={x:Reference ContactsPageRoot}}" CommandParameter="{Binding .}" />
                                        </Grid.GestureRecognizers>

                                        <Border WidthRequest="40" HeightRequest="40" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceAlt}, Dark={StaticResource Gray900}}" StrokeThickness="0" VerticalOptions="Center" Grid.RowSpan="2">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="20" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Name, Converter={StaticResource InitialsConverter}}" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center" VerticalOptions="Center" />
                                        </Border>

                                        <Label Grid.Column="1" Text="{Binding Name}" FontAttributes="Bold" FontSize="16" LineBreakMode="TailTruncation" MaxLines="1" />
                                        <Label Grid.Column="1" Grid.Row="1" Text="{Binding ClientName}" Style="{StaticResource MutedLabel}" LineBreakMode="TailTruncation" MaxLines="1" />

                                        <Label Grid.Column="2" Grid.RowSpan="2" Text="{Binding Phone}" Style="{StaticResource MutedLabel}" HorizontalTextAlignment="End" VerticalTextAlignment="Center" LineBreakMode="TailTruncation" MaxLines="1" />
                                        <Image Grid.Column="3"
                                               Grid.RowSpan="2"
                                               Source="{AppThemeBinding Light=icon_chevron_right.svg, Dark=icon_chevron_right_dark.svg}"
                                               WidthRequest="18"
                                               HeightRequest="18"
                                               Opacity="0.6"
                                               VerticalOptions="Center" />
                                    </Grid>
                                    <BoxView Grid.Row="1" HeightRequest="1" BackgroundColor="{AppThemeBinding Light={StaticResource BorderSubtle}, Dark={StaticResource Gray600}}" Margin="72,0,16,0" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.Footer>
                            <VerticalStackLayout Padding="0,12,0,16" HorizontalOptions="Center">
                                <Label Text="{Binding StatusMessage}" TextColor="{StaticResource Tertiary}" />
                            </VerticalStackLayout>
                        </CollectionView.Footer>
                    </CollectionView>
                </Border>
            </Grid>
        </RefreshView>

        <Button
            Grid.Row="1"
            Text="+"
            Command="{Binding AddContactCommand}"
            FontSize="22"
            FontAttributes="Bold"
            WidthRequest="44"
            HeightRequest="44"
            CornerRadius="22"
            Padding="0"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="0,0,20,20"
            ZIndex="10"
            Style="{StaticResource BaseButton}" />

        <controls:LoadingOverlay Grid.RowSpan="2" ZIndex="99" />
    </Grid>
</ContentPage>
