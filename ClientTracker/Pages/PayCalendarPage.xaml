<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ClientTracker.Pages.PayCalendarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:services="clr-namespace:ClientTracker.Services"
    Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_PayCalendar]}">

        <ContentPage.Background>
        <AppThemeBinding Light="{StaticResource AppBackgroundBrush}" Dark="{StaticResource AppBackgroundDarkBrush}" />
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Frame Style="{StaticResource CardFrame}">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_Header]}" Style="{StaticResource SectionTitle}" />
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_Subtitle]}" Style="{StaticResource MutedLabel}" />
                    </VerticalStackLayout>
                    <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Refresh]}" Command="{Binding RefreshCommand}" Grid.Column="1" Style="{StaticResource InlineButton}" />
                </Grid>
            </Frame>

            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="8">
                        <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Prev]}" Command="{Binding PreviousMonthCommand}" Style="{StaticResource InlineButton}" />
                        <Label Text="{Binding MonthLabel}" FontAttributes="Bold" Grid.Column="1" VerticalOptions="Center" />
                        <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Next]}" Command="{Binding NextMonthCommand}" Style="{StaticResource InlineButton}" Grid.Column="2" />
                        <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Refresh]}" Command="{Binding RefreshCommand}" Style="{StaticResource InlineButton}" Grid.Column="3" />
                    </Grid>
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_SelectMonth]}" Style="{StaticResource MutedLabel}" />
                        <DatePicker Date="{Binding MonthPickerDate}" Format="MMMM yyyy" />
                    </VerticalStackLayout>

                    <Label FontAttributes="Bold">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_MonthTotal]}" />
                                <Span Text=": " />
                                <Span Text="{Binding MonthTotal, StringFormat='{0:C}'}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="16">
                        <Frame Style="{StaticResource CardFrame}">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_Paid]}" Style="{StaticResource MutedLabel}" />
                                <Label Text="{Binding PaidCommissionTotal, StringFormat='{0:C}'}" FontSize="20" FontAttributes="Bold" />
                                <Label Text="{Binding PaidPaymentCount, StringFormat='{0} payments'}" Style="{StaticResource MutedLabel}" />
                            </VerticalStackLayout>
                        </Frame>
                        <Frame Style="{StaticResource CardFrame}" Grid.Column="1">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_Unpaid]}" Style="{StaticResource MutedLabel}" />
                                <Label Text="{Binding UnpaidCommissionTotal, StringFormat='{0:C}'}" FontSize="20" FontAttributes="Bold" />
                                <Label Text="{Binding UnpaidPaymentCount, StringFormat='{0} payments'}" Style="{StaticResource MutedLabel}" />
                            </VerticalStackLayout>
                        </Frame>
                        <Frame Style="{StaticResource CardFrame}" Grid.Column="2">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_Total]}" Style="{StaticResource MutedLabel}" />
                                <Label Text="{Binding MonthTotal, StringFormat='{0:C}'}" FontSize="20" FontAttributes="Bold" />
                                <Label Text="{Binding PaySummaries.Count, StringFormat='{0} pay dates'}" Style="{StaticResource MutedLabel}" />
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>

                    <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_Summary]}" Style="{StaticResource SectionTitle}" />
                    <CollectionView ItemsSource="{Binding PaySummaries}" SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="{StaticResource BorderSubtle}" StrokeThickness="1" BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
                                        <Label Text="{Binding PayDate, StringFormat='{0:MMM dd, yyyy}'}" />
                                        <Label Text="{Binding PaymentCount, StringFormat='{0} payments'}" Style="{StaticResource MutedLabel}" Grid.Column="1" HorizontalTextAlignment="Center" />
                                        <Label Text="{Binding TotalCommission, StringFormat='{0:C}'}" FontAttributes="Bold" Grid.Column="2" HorizontalTextAlignment="End" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_Calendar]}" Style="{StaticResource SectionTitle}" />
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*" ColumnSpacing="6">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Day_Sun]}" HorizontalTextAlignment="Center" Style="{StaticResource MutedLabel}" />
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Day_Mon]}" HorizontalTextAlignment="Center" Style="{StaticResource MutedLabel}" Grid.Column="1" />
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Day_Tue]}" HorizontalTextAlignment="Center" Style="{StaticResource MutedLabel}" Grid.Column="2" />
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Day_Wed]}" HorizontalTextAlignment="Center" Style="{StaticResource MutedLabel}" Grid.Column="3" />
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Day_Thu]}" HorizontalTextAlignment="Center" Style="{StaticResource MutedLabel}" Grid.Column="4" />
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Day_Fri]}" HorizontalTextAlignment="Center" Style="{StaticResource MutedLabel}" Grid.Column="5" />
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Day_Sat]}" HorizontalTextAlignment="Center" Style="{StaticResource MutedLabel}" Grid.Column="6" />
                    </Grid>

                    <CollectionView ItemsSource="{Binding CalendarDays}" SelectionMode="Single" SelectedItem="{Binding SelectedCalendarDay}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Span="7" Orientation="Vertical" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="{StaticResource BorderSubtle}" StrokeThickness="1" BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border" Binding="{Binding IsCurrentMonth}" Value="False">
                                            <Setter Property="Opacity" Value="0.4" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Border" Binding="{Binding IsPayDate}" Value="True">
                                            <Setter Property="BackgroundColor" Value="#E0F2F1" />
                                            <Setter Property="Stroke" Value="{StaticResource Primary}" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
                                            <Setter Property="Stroke" Value="{StaticResource Tertiary}" />
                                        </DataTrigger>
                                    </Border.Triggers>
                                    <VerticalStackLayout Padding="6" Spacing="2">
                                        <Label Text="{Binding DayLabel}" FontAttributes="Bold" />
                                        <Label Text="{Binding CommissionTotal, StringFormat='{0:C}'}" FontSize="11" IsVisible="{Binding IsPayDate}" />
                                        <Label Text="{Binding PaymentCount, StringFormat='{0} pays'}" Style="{StaticResource MutedLabel}" IsVisible="{Binding IsPayDate}" />
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="{Binding SelectedPayDateLabel}" Style="{StaticResource SectionTitle}" />
                    <CollectionView ItemsSource="{Binding SelectedPayDatePayments}" SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="{StaticResource BorderSubtle}" StrokeThickness="1" BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Grid Padding="10" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                        <VerticalStackLayout Spacing="2">
                                            <Label Text="{Binding ClientName}" FontAttributes="Bold" LineBreakMode="TailTruncation" />
                                            <Label Text="{Binding InvoiceNumber, StringFormat='Invoice #{0}'}" Style="{StaticResource MutedLabel}" LineBreakMode="TailTruncation" />
                                            <Label Text="{Binding ContactName}" Style="{StaticResource MutedLabel}" LineBreakMode="TailTruncation" />
                                        </VerticalStackLayout>
                                        <VerticalStackLayout Grid.Column="1" Spacing="4" HorizontalOptions="End">
                                            <Label Text="{Binding Commission, StringFormat='{0:C}'}" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                            <HorizontalStackLayout Spacing="6" HorizontalOptions="End">
                                                <Label Style="{StaticResource MutedLabel}">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_PaymentLabel]}" />
                                                            <Span Text=" #" />
                                                            <Span Text="{Binding PaymentNumber}" />
                                                            <Span Text=" " />
                                                            <Span Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_DueLabel]}" />
                                                            <Span Text=" " />
                                                            <Span Text="{Binding PaymentDate, StringFormat='{0:d}'}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <CheckBox IsChecked="{Binding IsPaid}" CheckedChanged="OnPaymentCheckedChanged" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_PaySchedule]}" Style="{StaticResource SectionTitle}" />
                    <CollectionView ItemsSource="{Binding PaymentSchedule}" SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="{StaticResource BorderSubtle}" StrokeThickness="1" BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Grid Padding="10" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                        <VerticalStackLayout Spacing="2">
                                            <Label Text="{Binding ClientName}" FontAttributes="Bold" LineBreakMode="TailTruncation" />
                                            <Label Text="{Binding InvoiceNumber, StringFormat='Invoice #{0}'}" Style="{StaticResource MutedLabel}" LineBreakMode="TailTruncation" />
                                            <Label Text="{Binding ContactName}" Style="{StaticResource MutedLabel}" LineBreakMode="TailTruncation" />
                                        </VerticalStackLayout>
                                        <VerticalStackLayout Grid.Column="1" Spacing="4" HorizontalOptions="End">
                                            <Label Text="{Binding Commission, StringFormat='{0:C}'}" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                            <Label Text="{Binding PayDate, StringFormat='{0:MMM dd}'}" Style="{StaticResource MutedLabel}" HorizontalTextAlignment="End" />
                                            <HorizontalStackLayout Spacing="6" HorizontalOptions="End">
                                                <Label Style="{StaticResource MutedLabel}">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_PaymentLabel]}" />
                                                            <Span Text=" #" />
                                                            <Span Text="{Binding PaymentNumber}" />
                                                            <Span Text=" " />
                                                            <Span Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_DueLabel]}" />
                                                            <Span Text=" " />
                                                            <Span Text="{Binding PaymentDate, StringFormat='{0:d}'}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <CheckBox IsChecked="{Binding IsPaid}" CheckedChanged="OnPaymentCheckedChanged" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Label Text="{Binding StatusMessage}" TextColor="{StaticResource Tertiary}" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
