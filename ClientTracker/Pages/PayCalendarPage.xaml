<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Name="PayCalendarPageRoot"
    x:Class="ClientTracker.Pages.PayCalendarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ClientTracker.Controls"
    xmlns:services="clr-namespace:ClientTracker.Services"
    Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_PayCalendar]}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <services:InitialsConverter x:Key="InitialsConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

        <ContentPage.Background>
        <AppThemeBinding Light="{StaticResource AppBackgroundBrush}" Dark="{StaticResource AppBackgroundDarkBrush}" />
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*">
        <controls:TopBar
            Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_Header]}"
            Subtitle="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_Subtitle]}" />

        <RefreshView Grid.Row="1" Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy}">
            <ScrollView>
                <VerticalStackLayout Padding="{StaticResource PagePadding}" Spacing="16">
            <Label Text="{Binding StatusMessage}" TextColor="{StaticResource Tertiary}">
                <Label.Triggers>
                    <DataTrigger TargetType="Label" Binding="{Binding StatusMessage}" Value="">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                </Label.Triggers>
            </Label>
            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8" IsVisible="{OnIdiom Phone=True, Default=False}">
                        <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Prev]}" Command="{Binding PreviousMonthCommand}" Style="{StaticResource InlineButton}" />
                        <Label Text="{Binding MonthLabel}" FontAttributes="Bold" Grid.Column="1" VerticalOptions="Center" HorizontalTextAlignment="Center" />
                        <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Next]}" Command="{Binding NextMonthCommand}" Style="{StaticResource InlineButton}" Grid.Column="2" />
                    </Grid>
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_SelectMonth]}" Style="{StaticResource MutedLabel}" />
                        <DatePicker Date="{Binding MonthPickerDate}" Format="MMMM yyyy" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_OverviewTitle]}" Style="{StaticResource SectionTitle}" />
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="12">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_MonthTotal]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding MonthTotal, StringFormat='{0:C}'}" FontSize="20" FontAttributes="Bold" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_OverviewPayments]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding MonthPaymentCount}" FontSize="20" FontAttributes="Bold" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="1" Spacing="4">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_OverviewAverage]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding AverageCommission, StringFormat='{0:C}'}" FontSize="20" FontAttributes="Bold" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="4">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_OverviewRange]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding PayDateRangeText}" FontAttributes="Bold" LineBreakMode="TailTruncation" MaxLines="2" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="2" Spacing="4">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_OverviewPayDates]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding PayDateCount}" FontSize="20" FontAttributes="Bold" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="2" Grid.Column="1" Spacing="4">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_OverviewNextPayDate]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding NextPayDateText}" FontAttributes="Bold" LineBreakMode="TailTruncation" MaxLines="2" />
                        </VerticalStackLayout>
                    </Grid>

                    <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[PayCalendar_Summary]}" Style="{StaticResource SectionTitle}" />
                    <VerticalStackLayout Spacing="12" BindableLayout.ItemsSource="{Binding PayDateGroups}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <VerticalStackLayout Spacing="0">
                                    <Grid Padding="16,12" ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12" MinimumHeightRequest="56">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding BindingContext.TogglePayDateCommand, Source={x:Reference PayCalendarPageRoot}}" CommandParameter="{Binding .}" />
                                        </Grid.GestureRecognizers>
                                        <Label Text="{Binding PayDate, StringFormat='{0:d}'}" Style="{StaticResource MutedLabel}" />
                                        <Label Style="{StaticResource MutedLabel}" Grid.Column="1" HorizontalTextAlignment="Center">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding PaymentCount}" FontAttributes="Bold" />
                                                    <Span Text=" " />
                                                    <Span Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Sale_Payments]}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label Text="{Binding TotalCommission, StringFormat='{0:C}'}" FontAttributes="Bold" Grid.Column="2" HorizontalTextAlignment="End" />
                                        <Image Grid.Column="3" Source="{AppThemeBinding Light=icon_chevron_right.svg, Dark=icon_chevron_right_dark.svg}" HeightRequest="16" WidthRequest="16" HorizontalOptions="End" VerticalOptions="Center">
                                            <Image.Triggers>
                                                <DataTrigger TargetType="Image" Binding="{Binding IsExpanded}" Value="True">
                                                    <Setter Property="Rotation" Value="90" />
                                                </DataTrigger>
                                            </Image.Triggers>
                                        </Image>
                                    </Grid>
                                    <BoxView HeightRequest="1" BackgroundColor="{AppThemeBinding Light={StaticResource BorderSubtle}, Dark={StaticResource Gray600}}" Margin="16,0" />
                                    <VerticalStackLayout IsVisible="{Binding IsExpanded}" Spacing="8" Padding="0,8,0,0">
                                        <VerticalStackLayout Spacing="8" BindableLayout.ItemsSource="{Binding Payments}">
                                            <BindableLayout.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid RowDefinitions="Auto,1">
                                                        <Grid Padding="16,12" ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="4" MinimumHeightRequest="72">
                                                            <Border WidthRequest="40" HeightRequest="40" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceAlt}, Dark={StaticResource Gray900}}" StrokeThickness="0" VerticalOptions="Center" Grid.RowSpan="2">
                                                                <Border.StrokeShape>
                                                                    <RoundRectangle CornerRadius="20" />
                                                                </Border.StrokeShape>
                                                                <Label Text="{Binding ClientName, Converter={StaticResource InitialsConverter}}" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center" VerticalOptions="Center" />
                                                            </Border>

                                                            <Label Grid.Column="1" Text="{Binding ClientName}" FontAttributes="Bold" FontSize="16" LineBreakMode="TailTruncation" MaxLines="1" />
                                                            <Label Grid.Column="1" Grid.Row="1" Text="{Binding ContactName}" Style="{StaticResource MutedLabel}" LineBreakMode="TailTruncation" MaxLines="1" />

                                                            <VerticalStackLayout Grid.Column="2" Grid.RowSpan="2" Spacing="4" HorizontalOptions="End" VerticalOptions="Center">
                                                                <Label Text="{Binding Commission, StringFormat='{0:C}'}" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                                                <Label Text="{Binding PaymentDate, StringFormat='Due {0:d}'}" Style="{StaticResource MutedLabel}" HorizontalTextAlignment="End" />
                                                            </VerticalStackLayout>
                                                        </Grid>
                                                        <BoxView Grid.Row="1" HeightRequest="1" BackgroundColor="{AppThemeBinding Light={StaticResource BorderSubtle}, Dark={StaticResource Gray600}}" Margin="72,0,16,0" />
                                                    </Grid>
                                                </DataTemplate>
                                            </BindableLayout.ItemTemplate>
                                        </VerticalStackLayout>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>
                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>
        <controls:LoadingOverlay Grid.RowSpan="2" ZIndex="99" />
    </Grid>
</ContentPage>


