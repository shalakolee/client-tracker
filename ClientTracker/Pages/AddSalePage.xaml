<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ClientTracker.Pages.AddSalePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ClientTracker.Controls"
    xmlns:services="clr-namespace:ClientTracker.Services"
    Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_AddSale]}">

        <ContentPage.Background>
        <AppThemeBinding Light="{StaticResource AppBackgroundBrush}" Dark="{StaticResource AppBackgroundDarkBrush}" />
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*">
        <controls:TopBar NavigationMode="Back"
            Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_AddSale]}"
            Subtitle="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Sales_Subtitle]}">
            <controls:TopBar.RightContent>
                <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_AddSale]}" Command="{Binding SaveCommand}" Style="{StaticResource BaseButton}" />
            </controls:TopBar.RightContent>
        </controls:TopBar>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="{StaticResource PagePadding}" Spacing="16">
            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Sale_Editor]}" Style="{StaticResource SectionTitle}" />
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Clients]}" Style="{StaticResource MutedLabel}" />
                            <Border Style="{StaticResource FormFieldContainer}">
                                <Picker ItemsSource="{Binding Clients}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedClient}" Style="{StaticResource FormFieldPicker}" />
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Sale_Contact]}" Style="{StaticResource MutedLabel}" />
                            <Border Style="{StaticResource FormFieldContainer}">
                                <Picker ItemsSource="{Binding Contacts}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedContact}" Style="{StaticResource FormFieldPicker}" />
                            </Border>
                        </VerticalStackLayout>
                    </Grid>
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Sale_InvoicePlaceholder]}" Style="{StaticResource MutedLabel}" />
                        <Border Style="{StaticResource FormFieldContainer}">
                            <Entry Text="{Binding InvoiceNumber}" Style="{StaticResource FormFieldEntry}" />
                        </Border>
                    </VerticalStackLayout>
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Sale_Date]}" Style="{StaticResource MutedLabel}" />
                            <Border Style="{StaticResource FormFieldContainer}">
                                <DatePicker Date="{Binding SaleDate}" Style="{StaticResource FormFieldDatePicker}" />
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Sale_AmountPlaceholder]}" Style="{StaticResource MutedLabel}" />
                            <Border Style="{StaticResource FormFieldContainer}">
                                <Entry Keyboard="Numeric" Text="{Binding Amount}" Style="{StaticResource FormFieldEntry}" />
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2" Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Sale_CommissionPlaceholder]}" Style="{StaticResource MutedLabel}" />
                            <Border Style="{StaticResource FormFieldContainer}">
                                <Entry Keyboard="Numeric" Text="{Binding CommissionPercent}" Style="{StaticResource FormFieldEntry}" />
                            </Border>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Label Text="{Binding StatusMessage}" TextColor="{StaticResource Tertiary}" />
            </VerticalStackLayout>
        </ScrollView>
        <controls:LoadingOverlay Grid.RowSpan="2" ZIndex="99" />
    </Grid>
</ContentPage>




