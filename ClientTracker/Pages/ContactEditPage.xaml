<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ClientTracker.Pages.ContactEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:services="clr-namespace:ClientTracker.Services"
    Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_ContactEdit]}">

        <ContentPage.Background>
        <AppThemeBinding Light="{StaticResource AppBackgroundBrush}" Dark="{StaticResource AppBackgroundDarkBrush}" />
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">
            <Frame Style="{StaticResource CardFrame}">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_ContactEdit]}" Style="{StaticResource SectionTitle}" />
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Contacts_Subtitle]}" Style="{StaticResource MutedLabel}" />
                    </VerticalStackLayout>
                    <HorizontalStackLayout Grid.Column="1" Spacing="8">
                        <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Save]}" Command="{Binding SaveCommand}" Style="{StaticResource InlineButton}" />
                        <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Delete]}" Command="{Binding DeleteCommand}" Style="{StaticResource InlineDangerButton}" />
                    </HorizontalStackLayout>
                </Grid>
            </Frame>

            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="10">
                    <Picker Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Clients]}" ItemsSource="{Binding Clients}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedClient}" IsEnabled="{Binding CanSelectClient}" />
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Entry Placeholder="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Contact_Name]}" Text="{Binding Name}" />
                        <Entry Placeholder="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Contact_Phone]}" Keyboard="Telephone" Text="{Binding Phone}" Grid.Column="1" />
                    </Grid>
                    <Entry Placeholder="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Contact_Email]}" Keyboard="Email" Text="{Binding Email}" />
                    <Editor Placeholder="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Contact_Notes]}" Text="{Binding Notes}" AutoSize="TextChanges" />
                </VerticalStackLayout>
            </Frame>

            <Label Text="{Binding StatusMessage}" TextColor="{StaticResource Tertiary}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>


