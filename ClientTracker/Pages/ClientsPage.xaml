<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ClientTracker.Pages.ClientsPage"
    x:Name="ClientsPageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ClientTracker.Controls"
    xmlns:services="clr-namespace:ClientTracker.Services"
    Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Clients]}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <services:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Background>
        <AppThemeBinding Light="{StaticResource AppBackgroundBrush}" Dark="{StaticResource AppBackgroundDarkBrush}" />
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*">
        <controls:TopBar
            Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Clients]}"
            Subtitle="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Clients_Subtitle]}"
            IsSearchVisible="True"
            IsSearchExpandable="True"
            SearchPlaceholder="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Clients_SearchPlaceholder]}"
            SearchText="{Binding ClientSearch}"
            SearchCommand="{Binding SearchCommand}" />

        <RefreshView Grid.Row="1" Command="{Binding LoadCommand}" IsRefreshing="{Binding IsBusy}">
            <Grid RowDefinitions="Auto,*" Padding="{StaticResource PagePadding}" RowSpacing="16">
                <Grid ColumnDefinitions="*,Auto">
                    <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Clients]}" Style="{StaticResource SectionTitle}" />
                        <Label Text="{Binding ClientCountLabel}"
                               Style="{StaticResource SectionTitle}"
                               TextColor="{AppThemeBinding Light={StaticResource TextMuted}, Dark={StaticResource Gray300}}" />
                    </HorizontalStackLayout>
                    <Button Grid.Column="1"
                            Margin="12,0,0,0"
                            Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Clients_Filters]}"
                            Command="{Binding OpenFilterSheetCommand}"
                            Style="{StaticResource SecondaryButton}" />
                </Grid>

                <Border Grid.Row="1" BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20" />
                    </Border.StrokeShape>
                    <CollectionView ItemsSource="{Binding Clients}"
                                    SelectionMode="None"
                                    RemainingItemsThreshold="4"
                                    RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid RowDefinitions="Auto,1">
                                    <Grid Padding="16,12" ColumnDefinitions="Auto,*,Auto,Auto" RowDefinitions="Auto,Auto" RowSpacing="4" MinimumHeightRequest="72">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding BindingContext.ViewClientCommand, Source={x:Reference ClientsPageRoot}}" CommandParameter="{Binding .}" />
                                        </Grid.GestureRecognizers>

                                        <Border WidthRequest="40" HeightRequest="40" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceAlt}, Dark={StaticResource Gray900}}" StrokeThickness="0" VerticalOptions="Center" Grid.RowSpan="2" Margin="0,0,12,0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="20" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Initials}" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" LineHeight="1" TranslationY="1" />
                                        </Border>

                                        <Label Grid.Column="1" Text="{Binding Name}" FontAttributes="Bold" FontSize="16" LineBreakMode="TailTruncation" MaxLines="1" />
                                        <Label Grid.Column="1" Grid.Row="1" Text="{Binding LocationLine}" Style="{StaticResource MutedLabel}" LineBreakMode="TailTruncation" MaxLines="1" />

                                        <VerticalStackLayout Grid.Column="2" Grid.RowSpan="2" Spacing="2" HorizontalOptions="End" VerticalOptions="Center">
                                            <Label Text="{Binding TotalSalesAmount, StringFormat='{0:C}'}" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                            <Label Text="{Binding UpcomingCommissionAmount, StringFormat='{0:C} upcoming'}" Style="{StaticResource MutedLabel}" HorizontalTextAlignment="End" />
                                        </VerticalStackLayout>
                                        <Image Grid.Column="3"
                                               Grid.RowSpan="2"
                                               Source="{AppThemeBinding Light=icon_chevron_right.svg, Dark=icon_chevron_right_dark.svg}"
                                               WidthRequest="18"
                                               HeightRequest="18"
                                               Opacity="0.6"
                                               VerticalOptions="Center" />
                                    </Grid>
                                    <BoxView Grid.Row="1" HeightRequest="1" BackgroundColor="{AppThemeBinding Light={StaticResource BorderSubtle}, Dark={StaticResource Gray600}}" Margin="72,0,16,0" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.Footer>
                            <VerticalStackLayout Padding="0,12,0,16" Spacing="8" HorizontalOptions="Center">
                                <ActivityIndicator IsVisible="{Binding HasMoreResults}" IsRunning="{Binding IsBusy}" />
                                <Label Text="{Binding StatusMessage}" TextColor="{StaticResource Tertiary}" />
                            </VerticalStackLayout>
                        </CollectionView.Footer>
                    </CollectionView>
                </Border>
            </Grid>
        </RefreshView>

        <Button
            Grid.Row="1"
            Text="+"
            Clicked="OnAddClientClicked"
            FontSize="22"
            FontAttributes="Bold"
            WidthRequest="44"
            HeightRequest="44"
            CornerRadius="22"
            Padding="0"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="0,0,20,20"
            ZIndex="10"
            IsVisible="{Binding IsFilterSheetOpen, Converter={StaticResource InverseBoolConverter}}"
            Style="{StaticResource BaseButton}" />

        <Grid x:Name="FilterSheetOverlay" Grid.RowSpan="2" IsVisible="False">
            <BoxView x:Name="FilterSheetScrim" BackgroundColor="#66000000" Opacity="0">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CloseFilterSheetCommand}" />
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border x:Name="FilterSheetPanel"
                    HorizontalOptions="End"
                    VerticalOptions="Fill"
                    WidthRequest="{OnIdiom Phone=320, Default=360}"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="24,0,24,0" />
                </Border.StrokeShape>
                <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="16">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Clients_Filters]}" Style="{StaticResource SectionTitle}" />
                        <Button Text="X" Command="{Binding CloseFilterSheetCommand}" Style="{StaticResource InlineButton}" Grid.Column="1" Margin="12,0,0,0" />
                    </Grid>

                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="16">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Clients_Filter_Country]}" Style="{StaticResource MutedLabel}" />
                                <Border BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceAlt}, Dark={StaticResource Gray900}}" StrokeThickness="0" Padding="12,6">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Picker
                                        Title=""
                                        ItemsSource="{Binding CountryFilters}"
                                        SelectedItem="{Binding SelectedCountryFilter}">
                                        <Picker.ItemDisplayBinding>
                                            <Binding Path="DisplayName" />
                                        </Picker.ItemDisplayBinding>
                                    </Picker>
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Clients_Sort_By]}" Style="{StaticResource MutedLabel}" />
                                <Border BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceAlt}, Dark={StaticResource Gray900}}" StrokeThickness="0" Padding="12,6">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Picker
                                        Title=""
                                        ItemsSource="{Binding SortOptions}"
                                        SelectedItem="{Binding SelectedSortOption}">
                                        <Picker.ItemDisplayBinding>
                                            <Binding Path="DisplayName" />
                                        </Picker.ItemDisplayBinding>
                                    </Picker>
                                </Border>
                            </VerticalStackLayout>

                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Clients_Filter_HasSales]}" VerticalTextAlignment="Center" />
                                <Switch Grid.Column="1" IsToggled="{Binding HasSalesOnly}" />
                            </Grid>

                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Clients_Filter_Upcoming]}" VerticalTextAlignment="Center" />
                                <Switch Grid.Column="1" IsToggled="{Binding HasUpcomingOnly}" />
                            </Grid>
                        </VerticalStackLayout>
                    </ScrollView>

                    <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto">
                        <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Clear]}" Command="{Binding ClearFiltersCommand}" Style="{StaticResource InlineButton}" />
                        <Label Grid.Column="1" />
                        <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Apply]}" Command="{Binding CloseFilterSheetCommand}" Style="{StaticResource BaseButton}" Grid.Column="2" Margin="10,0,0,0" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <controls:LoadingOverlay Grid.RowSpan="2" ZIndex="99" />
    </Grid>
</ContentPage>



