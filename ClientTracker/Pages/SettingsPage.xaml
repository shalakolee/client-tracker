<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ClientTracker.Pages.SettingsPage"
    x:Name="SettingsPageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ClientTracker.Controls"
    xmlns:services="clr-namespace:ClientTracker.Services"
    Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Settings]}">

        <ContentPage.Background>
        <AppThemeBinding Light="{StaticResource AppBackgroundBrush}" Dark="{StaticResource AppBackgroundDarkBrush}" />
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*">
        <controls:TopBar Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Settings]}" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="{StaticResource PagePadding}" Spacing="16">
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}" StrokeThickness="0" Padding="16">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_Language]}" Style="{StaticResource SectionTitle}" />
                        <Button
                            Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Save]}"
                            Command="{Binding ApplyLanguageCommand}"
                            Style="{StaticResource InlineButton}"
                            Grid.Column="1" />
                    </Grid>
                    <Picker
                        Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_Language]}"
                        ItemsSource="{Binding Languages}"
                        SelectedItem="{Binding SelectedLanguage}">
                        <Picker.ItemDisplayBinding>
                            <Binding Path="DisplayKey">
                                <Binding.Converter>
                                    <services:LocalizationKeyConverter />
                                </Binding.Converter>
                            </Binding>
                        </Picker.ItemDisplayBinding>
                    </Picker>
                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}" StrokeThickness="0" Padding="16">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[CommissionPlan_Title]}" Style="{StaticResource SectionTitle}" />
                        <Button
                            Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[CommissionPlan_Manage]}"
                            Command="{Binding OpenCommissionPlansCommand}"
                            Style="{StaticResource InlineButton}"
                            Grid.Column="1" />
                    </Grid>
                    <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[CommissionPlan_SettingsHint]}" Style="{StaticResource MutedLabel}" />
                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}" StrokeThickness="0" Padding="16">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_Data]}" Style="{StaticResource SectionTitle}" />
                        <Button
                            Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Refresh]}"
                            Command="{Binding RefreshDiagnosticsCommand}"
                            Style="{StaticResource InlineButton}"
                            Grid.Column="1" />
                    </Grid>
                    <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_DbPath]}" Style="{StaticResource MutedLabel}" />
                    <Label Text="{Binding DatabasePath}" />
                    <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_ActiveClients]}" Style="{StaticResource MutedLabel}" />
                    <Label Text="{Binding ActiveClientCount}" />
                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}" StrokeThickness="0" Padding="16">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_RemoteDb]}" Style="{StaticResource SectionTitle}" />
                        <Button
                            Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Save]}"
                            Command="{Binding SaveDatabaseConnectionCommand}"
                            Style="{StaticResource InlineButton}"
                            Grid.Column="1" />
                    </Grid>

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="8">
                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_UseRemoteDb]}" Style="{StaticResource MutedLabel}" VerticalTextAlignment="Center" />
                        <Switch Grid.Row="0" Grid.Column="1" IsToggled="{Binding UseRemoteMySql}" HorizontalOptions="Start" />

                        <Label Grid.Row="1" Grid.Column="0" Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_DbHost]}" Style="{StaticResource MutedLabel}" VerticalTextAlignment="Center" />
                        <Entry Grid.Row="1" Grid.Column="1" Text="{Binding DbHost}" Placeholder="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_DbHost]}" />

                        <Label Grid.Row="2" Grid.Column="0" Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_DbPort]}" Style="{StaticResource MutedLabel}" VerticalTextAlignment="Center" />
                        <Entry Grid.Row="2" Grid.Column="1" Text="{Binding DbPort}" Keyboard="Numeric" Placeholder="3306" />

                        <Label Grid.Row="3" Grid.Column="0" Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_DbName]}" Style="{StaticResource MutedLabel}" VerticalTextAlignment="Center" />
                        <Entry Grid.Row="3" Grid.Column="1" Text="{Binding DbName}" Placeholder="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_DbName]}" />

                        <Label Grid.Row="4" Grid.Column="0" Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_DbUser]}" Style="{StaticResource MutedLabel}" VerticalTextAlignment="Center" />
                        <Entry Grid.Row="4" Grid.Column="1" Text="{Binding DbUsername}" Placeholder="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_DbUser]}" />

                        <Label Grid.Row="5" Grid.Column="0" Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_DbPassword]}" Style="{StaticResource MutedLabel}" VerticalTextAlignment="Center" />
                        <Entry Grid.Row="5" Grid.Column="1" Text="{Binding DbPassword}" IsPassword="True" Placeholder="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_DbPassword]}" />
                    </Grid>

                    <HorizontalStackLayout Spacing="8">
                        <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_TestConnection]}" Command="{Binding TestDatabaseConnectionCommand}" Style="{StaticResource InlineButton}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}" StrokeThickness="0" Padding="16">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_Updates]}" Style="{StaticResource SectionTitle}" />
                        <HorizontalStackLayout Grid.Column="1" Spacing="8">
                            <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_CheckUpdates]}" Command="{Binding CheckUpdatesCommand}" Style="{StaticResource InlineButton}" />
                        </HorizontalStackLayout>
                    </Grid>
                    <Label Text="{Binding GitHubOwner}" Style="{StaticResource MutedLabel}" />
                    <Label Text="{Binding GitHubRepo}" Style="{StaticResource MutedLabel}" />
                </VerticalStackLayout>
            </Border>
            </VerticalStackLayout>
        </ScrollView>
        <controls:LoadingOverlay Grid.RowSpan="2" ZIndex="99" />
    </Grid>
</ContentPage>




