<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ClientTracker.Pages.SettingsPage"
    x:Name="SettingsPageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ClientTracker.Controls"
    xmlns:services="clr-namespace:ClientTracker.Services"
    Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Settings]}">

        <ContentPage.Background>
        <AppThemeBinding Light="{StaticResource AppBackgroundBrush}" Dark="{StaticResource AppBackgroundDarkBrush}" />
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*">
        <controls:TopBar Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Settings]}" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="{StaticResource PagePadding}" Spacing="16">
            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_Language]}" Style="{StaticResource SectionTitle}" />
                        <Button
                            Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Save]}"
                            Command="{Binding ApplyLanguageCommand}"
                            Style="{StaticResource InlineButton}"
                            Grid.Column="1" />
                    </Grid>
                    <Picker
                        Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_Language]}"
                        ItemsSource="{Binding Languages}"
                        SelectedItem="{Binding SelectedLanguage}">
                        <Picker.ItemDisplayBinding>
                            <Binding Path="DisplayKey">
                                <Binding.Converter>
                                    <services:LocalizationKeyConverter />
                                </Binding.Converter>
                            </Binding>
                        </Picker.ItemDisplayBinding>
                    </Picker>
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_Data]}" Style="{StaticResource SectionTitle}" />
                        <Button
                            Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Refresh]}"
                            Command="{Binding RefreshDiagnosticsCommand}"
                            Style="{StaticResource InlineButton}"
                            Grid.Column="1" />
                    </Grid>
                    <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_DbPath]}" Style="{StaticResource MutedLabel}" />
                    <Label Text="{Binding DatabasePath}" />
                    <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_ActiveClients]}" Style="{StaticResource MutedLabel}" />
                    <Label Text="{Binding ActiveClientCount}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_Updates]}" Style="{StaticResource SectionTitle}" />
                        <HorizontalStackLayout Grid.Column="1" Spacing="8">
                            <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Settings_CheckUpdates]}" Command="{Binding CheckUpdatesCommand}" Style="{StaticResource InlineButton}" />
                        </HorizontalStackLayout>
                    </Grid>
                    <Label Text="{Binding GitHubOwner}" Style="{StaticResource MutedLabel}" />
                    <Label Text="{Binding GitHubRepo}" Style="{StaticResource MutedLabel}" />
                </VerticalStackLayout>
            </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>


