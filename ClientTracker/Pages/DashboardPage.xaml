<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ClientTracker.Pages.DashboardPage"
    x:Name="DashboardPageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ClientTracker.Controls"
    xmlns:services="clr-namespace:ClientTracker.Services"
    Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Dashboard]}">

        <ContentPage.Background>
        <AppThemeBinding Light="{StaticResource AppBackgroundBrush}" Dark="{StaticResource AppBackgroundDarkBrush}" />
    </ContentPage.Background>

    <ContentPage.Resources>
        <ResourceDictionary>
            <LinearGradientBrush x:Key="DashboardCardClientsLight" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E0F2FE" Offset="0" />
                <GradientStop Color="#EEF2FF" Offset="1" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="DashboardCardClientsDark" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B1220" Offset="0" />
                <GradientStop Color="#111827" Offset="1" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="DashboardCardSalesLight" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#ECFDF5" Offset="0" />
                <GradientStop Color="#E0F2FE" Offset="1" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="DashboardCardSalesDark" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B1F1A" Offset="0" />
                <GradientStop Color="#0F172A" Offset="1" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="DashboardCardRevenueLight" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFF7ED" Offset="0" />
                <GradientStop Color="#FEF3C7" Offset="1" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="DashboardCardRevenueDark" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1F1300" Offset="0" />
                <GradientStop Color="#1F2937" Offset="1" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="DashboardCardCommissionLight" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FCE7F3" Offset="0" />
                <GradientStop Color="#EEF2FF" Offset="1" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="DashboardCardCommissionDark" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1F0B1A" Offset="0" />
                <GradientStop Color="#1F2937" Offset="1" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        <controls:TopBar
            Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Dashboard]}"
            Subtitle="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_Subtitle]}" />

        <RefreshView Grid.Row="1" Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy}">
            <ScrollView>
                <VerticalStackLayout Padding="{StaticResource PagePadding}" Spacing="16">

                <FlexLayout Wrap="Wrap" JustifyContent="SpaceBetween" AlignItems="Stretch">
                    <Border Padding="16" StrokeThickness="0" Margin="0,0,0,12" FlexLayout.Basis="48%">
                        <Border.Background>
                            <AppThemeBinding Light="{StaticResource DashboardCardClientsLight}" Dark="{StaticResource DashboardCardClientsDark}" />
                        </Border.Background>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="18" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_TotalClients]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding ClientCount}" FontSize="30" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>

                    <Border Padding="16" StrokeThickness="0" Margin="0,0,0,12" FlexLayout.Basis="48%">
                        <Border.Background>
                            <AppThemeBinding Light="{StaticResource DashboardCardSalesLight}" Dark="{StaticResource DashboardCardSalesDark}" />
                        </Border.Background>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="18" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_TotalSales]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding SaleCount}" FontSize="30" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>

                    <Border Padding="16" StrokeThickness="0" Margin="0,0,0,12" FlexLayout.Basis="48%">
                        <Border.Background>
                            <AppThemeBinding Light="{StaticResource DashboardCardRevenueLight}" Dark="{StaticResource DashboardCardRevenueDark}" />
                        </Border.Background>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="18" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_TotalRevenue]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding TotalSalesAmount, StringFormat='{}{0:C}'}" FontSize="26" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>

                    <Border Padding="16" StrokeThickness="0" Margin="0,0,0,12" FlexLayout.Basis="48%">
                        <Border.Background>
                            <AppThemeBinding Light="{StaticResource DashboardCardCommissionLight}" Dark="{StaticResource DashboardCardCommissionDark}" />
                        </Border.Background>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="18" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_OutstandingCommission]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding OutstandingCommissionAmount, StringFormat='{}{0:C}'}" FontSize="26" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>
                </FlexLayout>

            <Border Padding="24,0" BackgroundColor="Transparent" StrokeThickness="0">
                <CollectionView
                    x:Name="CommissionCarousel"
                    ItemsSource="{Binding CommissionSummaries}"
                    SelectionMode="None"
                    HorizontalScrollBarVisibility="Never"
                    HeightRequest="170">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" SnapPointsType="MandatorySingle" SnapPointsAlignment="Center" ItemSpacing="12" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Style="{StaticResource CardFrame}" WidthRequest="320" HorizontalOptions="Center">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BindingContext.OpenCalendarCommand, Source={x:Reference DashboardPageRoot}}" />
                                </Frame.GestureRecognizers>
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                    <VerticalStackLayout Spacing="6">
                                        <Label Text="{Binding Title}" Style="{StaticResource MutedLabel}" />
                                        <Label Text="{Binding CommissionAmount, StringFormat='{0:C}'}" FontSize="24" FontAttributes="Bold" />
                                        <VerticalStackLayout Spacing="4" BindableLayout.ItemsSource="{Binding PayDateSummaries}">
                                            <BindableLayout.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                                                        <Label Text="{Binding DateLabel}" Style="{StaticResource MutedLabel}" />
                                                        <Label Grid.Column="2" Text="{Binding Amount, StringFormat='{0:C}'}" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                                    </Grid>
                                                </DataTemplate>
                                            </BindableLayout.ItemTemplate>
                                        </VerticalStackLayout>
                                        <HorizontalStackLayout Spacing="8">
                                            <Border Style="{StaticResource BadgeBorder}">
                                                <Label>
                                                    <Label.Style>
                                                        <StaticResource Key="BadgeLabel" />
                                                    </Label.Style>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding PaymentCount}" />
                                                            <Span Text=" " />
                                                            <Span Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_UpcomingPayments]}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </Border>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>

                <Frame Style="{StaticResource CardFrame}">
                    <VerticalStackLayout Spacing="12">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_SalesCommissionTitle]}" Style="{StaticResource SectionTitle}" />
                            <Label Text="{Binding TrendRangeLabel}" Style="{StaticResource MutedLabel}" Grid.Column="1" VerticalTextAlignment="Center" />
                        </Grid>
                        <controls:TrendChart
                            Labels="{Binding TrendLabels}"
                            SeriesA="{Binding TrendSales}"
                            SeriesB="{Binding TrendCommission}"
                            SelectedIndex="{Binding TrendSelectedIndex}" />
                    </VerticalStackLayout>
                </Frame>
                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>
        <controls:LoadingOverlay Grid.RowSpan="2" ZIndex="99" />
    </Grid>
</ContentPage>




