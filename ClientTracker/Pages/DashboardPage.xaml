<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ClientTracker.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ClientTracker.Controls"
    xmlns:services="clr-namespace:ClientTracker.Services"
    Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Dashboard]}">

        <ContentPage.Background>
        <AppThemeBinding Light="{StaticResource AppBackgroundBrush}" Dark="{StaticResource AppBackgroundDarkBrush}" />
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*">
        <controls:TopBar
            Title="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Title_Dashboard]}"
            Subtitle="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_Subtitle]}">
            <controls:TopBar.RightContent>
                <Grid ColumnDefinitions="260,180,Auto" ColumnSpacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}" Stroke="{AppThemeBinding Light={StaticResource BorderSubtle}, Dark={StaticResource Gray600}}" StrokeThickness="1" Padding="12,10">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                            <Image Source="{OnPlatform WinUI=icon_search_win.png, Default=icon_search}" WidthRequest="18" HeightRequest="18" Opacity="0.7" VerticalOptions="Center" />
                            <Entry Grid.Column="1" Placeholder="Search…" BackgroundColor="Transparent" />
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}" Stroke="{AppThemeBinding Light={StaticResource BorderSubtle}, Dark={StaticResource Gray600}}" StrokeThickness="1" Padding="12,10">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <Label Text="Filter" VerticalTextAlignment="Center" />
                            <Label Grid.Column="1" Text="▾" Opacity="0.7" VerticalTextAlignment="Center" />
                        </Grid>
                    </Border>

                    <Border Grid.Column="2" WidthRequest="42" HeightRequest="42" BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource Gray950}}" Stroke="{AppThemeBinding Light={StaticResource BorderSubtle}, Dark={StaticResource Gray600}}" StrokeThickness="1" VerticalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14" />
                        </Border.StrokeShape>
                        <ImageButton Source="{OnPlatform WinUI=icon_bell_win.png, Default=icon_bell}" BackgroundColor="Transparent" Padding="10" Command="{Binding RefreshCommand}" />
                    </Border>
                </Grid>
            </controls:TopBar.RightContent>
        </controls:TopBar>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="{StaticResource PagePadding}" Spacing="16">

                <FlexLayout Wrap="Wrap" JustifyContent="SpaceBetween" AlignItems="Stretch">
                    <Border Padding="16" StrokeThickness="0" Margin="0,0,0,12" FlexLayout.Basis="48%">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#E0F2FE" Offset="0" />
                                <GradientStop Color="#EEF2FF" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="18" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_TotalClients]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding ClientCount}" FontSize="30" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>

                    <Border Padding="16" StrokeThickness="0" Margin="0,0,0,12" FlexLayout.Basis="48%">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#ECFDF5" Offset="0" />
                                <GradientStop Color="#E0F2FE" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="18" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_TotalSales]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding SaleCount}" FontSize="30" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>

                    <Border Padding="16" StrokeThickness="0" Margin="0,0,0,12" FlexLayout.Basis="48%">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FFF7ED" Offset="0" />
                                <GradientStop Color="#FEF3C7" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="18" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_TotalRevenue]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding TotalSalesAmount, StringFormat='{0:C}'}" FontSize="26" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>

                    <Border Padding="16" StrokeThickness="0" Margin="0,0,0,12" FlexLayout.Basis="48%">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FCE7F3" Offset="0" />
                                <GradientStop Color="#EEF2FF" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="18" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_OutstandingCommission]}" Style="{StaticResource MutedLabel}" />
                            <Label Text="{Binding OutstandingCommissionAmount, StringFormat='{0:C}'}" FontSize="26" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>
                </FlexLayout>

            <Frame Style="{StaticResource CardFrame}">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_UpcomingCommission]}" Style="{StaticResource MutedLabel}" />
                        <Label Text="{Binding UpcomingCommissionAmount, StringFormat='{0:C}'}" FontSize="24" FontAttributes="Bold" />
                        <Label Style="{StaticResource MutedLabel}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding UpcomingPaymentCount}" />
                                    <Span Text=" " />
                                    <Span Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_UpcomingPayments]}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </VerticalStackLayout>
                    <Button Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Action_Refresh]}" Command="{Binding RefreshCommand}" Grid.Column="1" VerticalOptions="Center" Style="{StaticResource InlineButton}" />
                </Grid>
            </Frame>

                <Frame Style="{StaticResource CardFrame}">
                    <VerticalStackLayout Spacing="12">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <Label Text="{Binding Source={x:Static services:LocalizationResourceManager.Instance}, Path=[Dashboard_Trends]}" Style="{StaticResource SectionTitle}" />
                            <Label Text="Last 6 months" Style="{StaticResource MutedLabel}" Grid.Column="1" VerticalTextAlignment="Center" />
                        </Grid>
                        <controls:TrendChart
                            Labels="{Binding TrendLabels}"
                            SeriesA="{Binding TrendSales}"
                            SeriesB="{Binding TrendCommission}" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
        <controls:LoadingOverlay Grid.RowSpan="2" ZIndex="99" />
    </Grid>
</ContentPage>


